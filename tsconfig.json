{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "dist"]
}
